com.capstone.sigve
│
├── data
│   └── repository
│       ├── SettingsRepository.kt          // repositorio central de configuraciones
│       ├── VehiclesRepository.kt          // futuro repo de vehículos
│       └── MaintenanceRepository.kt       // futuro repo de mantenimientos
│
├── domain
│   ├── model
│   │   ├── AppTheme.kt                    // LIGHT / DARK / SYSTEM
│   │   ├── AppColor.kt                    // colores configurables
│   │   ├── Vehicle.kt                     // modelo de vehículo
│   │   └── Maintenance.kt                 // modelo de mantención
│   └── repository
│       ├── SettingsRepositoryInterface.kt
│       ├── VehiclesRepositoryInterface.kt
│       └── MaintenanceRepositoryInterface.kt
│
├── ui
│   ├── theme
│   │   ├── SIGVETheme.kt                  // aplica tema y colorScheme dinámico
│   │   ├── Colors.kt                      // colores default para cada tema
│   │   └── Type.kt                        // tipografías
│   │
│   ├── settings
│   │   ├── SettingsScreen.kt              // UI de ajustes
│   │   └── SettingsViewModel.kt
│   │
│   ├── vehicles
│   │   ├── VehiclesScreen.kt              // UI lista de vehículos
│   │   └── VehiclesViewModel.kt
│   │
│   ├── maintenance
│   │   ├── MaintenanceScreen.kt
│   │   └── MaintenanceViewModel.kt
│   │
│   └── MainActivity.kt
│
├── di                                     // para Hilt/Koin si se implementa
│
└── utils                                   // helpers, extensiones, constantes
